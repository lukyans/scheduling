<p id="notice"><%= notice %></p>
<div class="container mt-3">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-6">
      <div class="card-body">
        <div class="h1 mb-3">
          <%= @event.name %>
        </div>
        <%= formatted_date(@event.date) %>
        <div class="mt-3">
          <%= link_to 'Edit', edit_event_path(@event), class: "btn btn-info btn-sm" %>
        </div>
      </div>
    </div>
  </div>
</div>
