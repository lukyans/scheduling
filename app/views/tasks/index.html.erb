<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= link_to 'Show', [task.event, task] %></td>
    <td><%= link_to 'Edit', edit_event_task_path(task.event, task) %></td>
    <td><%= link_to 'Destroy', [task.event, task], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Task', new_event_task_path(params[:event_id]) %>
